{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "$id": "#/properties/data",
      "type": "array",
      "title": "The Data Schema",
      "items": {
        "$id": "#/properties/data/items",
        "type": "object",
        "title": "The Items Schema",
        "required": [
          "id",
          "type",
          "attributes",
          "relationships"
        ],
        "properties": {
          "id": {
            "$id": "#/properties/data/items/properties/id",
            "type": "string",
            "title": "The Id Schema",
            "default": "",
            "examples": [
              "1"
            ],
            "pattern": "^(.*)$"
          },
          "type": {
            "$id": "#/properties/data/items/properties/type",
            "type": "string",
            "title": "The Type Schema",
            "default": "",
            "examples": [
              "comment"
            ],
            "pattern": "^(.*)$"
          },
          "attributes": {
            "$id": "#/properties/data/items/properties/attributes",
            "type": "object",
            "title": "The Attributes Schema",
            "required": [
              "name",
              "image"
            ],
            "properties": {
              "name": {
                "$id": "#/properties/data/items/properties/attributes/properties/name",
                "type": "string",
                "title": "The Name Schema",
                "default": "",
                "examples": [
                  "lolkek"
                ],
                "pattern": "^(.*)$"
              },
              "image": {
                "$id": "#/properties/data/items/properties/attributes/properties/image",
                "type": "string",
                "title": "The Image Schema",
                "default": null,
                "examples": [
                  null
                ]
              }
            }
          },
          "relationships": {
            "$id": "#/properties/data/items/properties/relationships",
            "type": "object",
            "title": "The Relationships Schema",
            "required": [
              "task"
            ],
            "properties": {
              "task": {
                "$id": "#/properties/data/items/properties/relationships/properties/task",
                "type": "object",
                "title": "The Task Schema",
                "required": [
                  "data"
                ],
                "properties": {
                  "data": {
                    "$id": "#/properties/data/items/properties/relationships/properties/task/properties/data",
                    "type": "object",
                    "title": "The Data Schema",
                    "required": [
                      "id",
                      "type"
                    ],
                    "properties": {
                      "id": {
                        "$id": "#/properties/data/items/properties/relationships/properties/task/properties/data/properties/id",
                        "type": "string",
                        "title": "The Id Schema",
                        "default": "",
                        "examples": [
                          "2"
                        ],
                        "pattern": "^(.*)$"
                      },
                      "type": {
                        "$id": "#/properties/data/items/properties/relationships/properties/task/properties/data/properties/type",
                        "type": "string",
                        "title": "The Type Schema",
                        "default": "",
                        "examples": [
                          "tasks"
                        ],
                        "pattern": "^(.*)$"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
